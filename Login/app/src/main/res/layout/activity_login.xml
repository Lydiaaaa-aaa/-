<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@mipmap/bb_2">
    <View
        android:layout_width="match_parent"
        android:background="@color/my_light_primary"
        android:layout_height="0dp"
        />

    <ImageView
        android:layout_width="100dp" android:layout_height="100dp" android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:src="@mipmap/bbb" android:contentDescription="App Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:layout_marginTop="16dp" android:text="请登录以获得商城服务"
        android:textSize="16sp" android:textColor="@color/black" />


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_margin="2dp"
    android:text="登录"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_margin="26dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@drawable/login_et_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_account_box_24"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入您的账号"
                android:textSize="14sp"
                android:layout_height="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/login_et_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_https_24"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入您的密码"
                android:inputType="numberPassword"
                android:textSize="14sp"
                android:layout_height="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="记住密码"/>
            <TextView
                android:id="@+id/register"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="还未注册？"
                android:textStyle="bold" />


        </RelativeLayout>
        <Button
            android:id="@+id/b_login"
            android:layout_width="match_parent"
            android:text="登录"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:layout_marginTop="40dp" android:text="第三方账号登录"
        android:textColor="@color/black" android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_gravity="center_horizontal" android:layout_marginTop="16dp" android:layout_marginBottom="24dp" >

        <ImageView
            android:id="@+id/iv_qq_login"
            android:layout_width="50dp" android:layout_height="50dp"
            android:src="@mipmap/qq" android:layout_marginEnd="32dp" android:clickable="true"
            android:focusable="true"
            android:contentDescription="QQ login" />

        <ImageView
            android:id="@+id/iv_wechat_login"
            android:layout_width="50dp" android:layout_height="50dp"
            android:src="@mipmap/wechat" android:clickable="true"
            android:focusable="true"
            android:contentDescription="WeChat login" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
